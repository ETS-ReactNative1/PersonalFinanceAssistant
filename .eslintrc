{
  "extends": "airbnb",
  "globals": {
    "fetch": true,
    "FormData": true,
    "navigator": true
  },
  "plugins": [
    "react",
    "react-native"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "object-curly-spacing": [
      "error",
      "always",
      {
        "arraysInObjects": false,
        "objectsInObjects": false
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      2,
      "single"
    ],
    "no-empty": [
      "error",
      {
        "allowEmptyCatch": true
      }
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "none",
        "ignoreRestSiblings": false
      }
    ],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-unused-expressions": [
      2,
      {
        "allowShortCircuit": true,
        "allowTernary": true,
        "allowTaggedTemplates": true
      }
    ],
    "import/order": [
      2,
      {
        "groups": [
          "builtin"
        ]
      }
    ],
    "max-len": [
      2,
      {
        "code": 120,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "comma-dangle": [
      2,
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "eqeqeq": 0,
    "arrow-parens": 0,
    "no-shadow": 0,
    "no-console": 0,
    "consistent-return": 0,
    "no-underscore-dangle": 0,
    "import/prefer-default-export": 0,
    "import/extensions": 0,
    "no-nested-ternary": 0,
    "no-confusing-arrow": 0,
    "import/no-extraneous-dependencies": 0,
    "import/first": 0,
    "import/no-unresolved": 0,
    "import/no-dynamic-require": 0,
    "global-require": 0,
    "react/jsx-closing-bracket-location": [
      1,
      "after-props"
    ],
    "react/jsx-wrap-multilines": 0,
    "react/no-danger": 0,
    "react/no-array-index-key": 0,
    "react/require-default-props": 0,
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/jsx-sort-props": [
      2,
      {
        "callbacksLast": true,
        "noSortAlphabetically": true
      }
    ],
    "react/jsx-curly-spacing": [
      2,
      {
        "when": "always",
        "spacing": {
          "objectLiterals": "never"
        }
      }
    ],
    "react/prop-types": 0,
    "semi": [
      2,
      "always"
    ]
  }
}
